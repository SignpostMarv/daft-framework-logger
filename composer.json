{
    "name": "signpostmarv/daft-framework-logging",
    "description": "daft framework with logging",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "SignpostMarv",
            "email": "me@signpostmarv.name"
        }
    ],
    "autoload": {
        "psr-4": {
            "SignpostMarv\\DaftFramework\\Logging\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SignpostMarv\\DaftFramework\\Logging\\Tests\\": "./Tests/",
            "SignpostMarv\\DaftFramework\\Tests\\": "./vendor/signpostmarv/daft-framework/Tests/",
            "SignpostMarv\\DaftRouter\\Tests\\": "./vendor/signpostmarv/daft-router/Tests/"
        }
    },
    "config": {
        "classmap-authoritative": true,
        "sort-packages": true
    },
    "scripts": {
        "tests": [
            "phpunit -vvvv",
            "phpstan analyse -c ./phpstan.neon .php_cs.dist src tests",
            "psalm",
            "phpcpd src Tests",
            "phpmnd src",
            "phpmnd Tests",
            "composer-require-checker check ./composer.json",
            "php-cs-fixer fix --verbose --allow-risky=yes --dry-run"
        ]
    },
    "require": {
        "php": "^7.1",
        "filp/whoops": "^2.2",
        "psr/log": "^1.0",
        "signpostmarv/daft-framework": "^0.3.2",
        "symfony/http-foundation": "^4.1"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^1.0",
        "phpstan/phpstan": "^0.10.1",
        "phpstan/phpstan-phpunit": "^0.10.0",
        "phpstan/phpstan-strict-rules": "^0.10.0",
        "phpunit/phpunit": "^7.2",
        "povils/phpmnd": "^2.0",
        "roave/security-advisories": "dev-master",
        "sebastian/phpcpd": "^4.0",
        "signpostmarv/php-cs-fixer-config": "^0.5.1",
        "vimeo/psalm": "^2.0"
    }
}
